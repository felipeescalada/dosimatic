# Local Development Environment Configuration
# This file overrides .env for local development

# Server Configuration - LOCAL DEVELOPMENT
PORT=3501
NODE_ENV=development

# CORS Configuration - Updated for local port
CORS_ORIGIN=http://localhost:3001,http://localhost:3501

# Database Configuration - LOCAL DATABASE (standalone PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=secwin_db_local
DB_USER=postgres
DB_PASSWORD=password

# File Upload Configuration
UPLOADS_PATH=./uploads
SIGNED_DIR=./signed
SIGNATURES_PATH=./signatures

# Default Signature Configuration
DEFAULT_SIGNATURE=signatures/default_signature.png

# JWT Configuration
JWT_SECRET=your-local-secret-key

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Local Environment Flag
DOCKER_ENV=false
